<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Base.Theme.TigersHutCalculator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textTitle"
        style="@style/Base.Theme.TigersHutCalculator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="sans-serif"
        android:text="@string/app_title"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text='Calculadora de Festa' />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/opcaoCompleta"
        style="@style/Base.Theme.TigersHutCalculator"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:checked="true"
        android:onClick="ativarOpcaoCompleta"
        android:text="@string/opcao1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTitle"
        tools:checked="true" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/opcaoChurrasco"
        style="@style/Base.Theme.TigersHutCalculator"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:checked="false"
        android:onClick="ativarOpcaoChurrasco"
        android:text="@string/opcao3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/opcaoCompleta"
        tools:text="Opção Churrasco" />

    <ToggleButton
        android:id="@+id/btnCustom"
        style="@style/Base.Theme.TigersHutCalculator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:checked="false"
        android:onClick="customDrinks"
        android:textOff="@string/btnCustom_off"
        android:textOn="@string/btnCustom_on"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTitle"
        app:layout_constraintVertical_bias="0.325"
        tools:text="Personalizar" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/opcaoLight"
        style="@style/Base.Theme.TigersHutCalculator"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:onClick="ativarOpcaoLight"
        android:text="@string/opcao2"
        app:layout_constraintBottom_toTopOf="@+id/btnCustom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/opcaoChurrasco"
        app:layout_constraintVertical_bias="0.129"
        tools:text="Opção Light" />

    <View
        android:id="@+id/divider2"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.568" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingTop="8dp"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/textFirtsRow"
                style="@style/Base.Theme.TigersHutCalculator"
                android:layout_width="142dp"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:textStyle="bold"
                tools:text="Linha 1" />

            <SeekBar
                android:id="@+id/vodkaSeekBar"
                android:layout_width="267dp"
                android:layout_height="match_parent" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/textSecondRow"
                style="@style/Base.Theme.TigersHutCalculator"
                android:layout_width="142dp"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:textStyle="bold"
                tools:text="Linha 2" />

            <SeekBar
                android:id="@+id/iceSeekBar"
                android:layout_width="267dp"
                android:layout_height="match_parent" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/textThirdRow"
                style="@style/Base.Theme.TigersHutCalculator"
                android:layout_width="142dp"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:textStyle="bold"
                tools:text="Linha 3" />

            <SeekBar
                android:id="@+id/refriSeekBar"
                android:layout_width="267dp"
                android:layout_height="match_parent" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/textFourthRow"
                style="@style/Base.Theme.TigersHutCalculator"
                android:layout_width="142dp"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:textStyle="bold"
                tools:text="Linha 4" />

            <SeekBar
                android:id="@+id/sucoSeekBar"
                android:layout_width="267dp"
                android:layout_height="match_parent" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/textFifthRow"
                style="@style/Base.Theme.TigersHutCalculator"
                android:layout_width="142dp"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:textStyle="bold"
                tools:text="Linha 5" />

            <SeekBar
                android:id="@+id/cervejaSeekBar"
                android:layout_width="267dp"
                android:layout_height="match_parent" />

        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>